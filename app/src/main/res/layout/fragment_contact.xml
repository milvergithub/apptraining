<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="@dimen/s20dp"
            android:layout_marginTop="@dimen/s40dp"
            android:layout_marginRight="@dimen/s20dp"
            android:layout_marginBottom="@dimen/s20dp"
            app:cardCornerRadius="@dimen/s10dp"
            app:cardElevation="@dimen/s1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/phone_section"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/s20dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="@dimen/s40dp"
                            android:layout_height="@dimen/s40dp"
                            android:src="@drawable/ic_phone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Call Center 800-4565"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_700"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/youtube_section"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/phone_section"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/s20dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="@dimen/s40dp"
                            android:layout_height="@dimen/s40dp"
                            android:src="@drawable/ic_youtube"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YouTube"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_700"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/facebook_section"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/youtube_section"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/s20dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="@dimen/s40dp"
                            android:layout_height="@dimen/s40dp"
                            android:src="@drawable/ic_facebook"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facebook"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_700"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/twitter_section"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/facebook_section"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/s20dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_width="@dimen/s40dp"
                            android:layout_height="@dimen/s40dp"
                            android:src="@drawable/ic_twitter"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Twitter"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_700"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>